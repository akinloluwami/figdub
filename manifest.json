{
  "manifest_version": 3,
  "name": "FigDub",
  "description": "Generate short links for Figma files",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "matches": ["https://*.figma.com/*"],
      "js": ["src/content.tsx"]
    }
  ],
  "permissions": ["clipboardWrite", "storage"],
  "icons": {
    "128": "src/icons/128.png",
    "48": "src/icons/48.png",
    "16": "src/icons/16.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
